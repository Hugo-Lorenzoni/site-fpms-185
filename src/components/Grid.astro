---
import { Image } from "astro:assets";

interface Props {
  title: string;
  list: {
    name: string;
    href: string;
    image: ImageMetadata;
    color: string;
  }[];
}

const { title, list } = Astro.props;
---

<section class="space-y-3">
  <h2 class="text-xl font-semibold">{title}</h2>
  <ul
    class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
  >
    {
      list.map((item) => (
        <li class="overflow-hidden rounded-2xl shadow-lg duration-150 hover:opacity-80">
          <a class="relative" href={item.href}>
            <>
              <Image
                class="-z-10 h-full object-cover"
                src={item.image}
                alt={item.name}
                quality={30}
                format="webp"
              />
              <h3 class="absolute bottom-3 left-4 right-4 text-xl font-medium text-white drop-shadow-normal [text-wrap:balance]">
                {item.name}
              </h3>
            </>
          </a>
        </li>
      ))
    }
  </ul>
</section>
