---

<Layout title="Cercles & Commissions">
  <main class="container mx-auto space-y-4 px-4 py-4">
    <h1
      class="bg-gradient-to-r from-blue-900 to-blue-600 bg-clip-text text-3xl font-bold text-transparent"
    >
      Cercles & Commissions FPMs
    </h1>
    <section class="space-y-3">
      <h2 class="text-xl font-semibold">Cercles fédérés</h2>
      <ul
        class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        {
          cercles.map((cercle) => (
            <li class="overflow-hidden rounded-2xl shadow-lg">
              <a class="relative" href={cercle.href}>
                <>
                  <Image
                    class="-z-10 h-full object-cover"
                    src={cercle.image}
                    alt={cercle.name}
                    quality={30}
                    format="webp"
                    transition:name={cercle.name}
                  />
                  <h3 class="absolute bottom-3 left-4 text-xl font-medium text-white drop-shadow-normal">
                    {cercle.name}
                  </h3>
                </>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
    <section class="space-y-3">
      <h2 class="text-xl font-semibold">Commissions</h2>
      <ul
        class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        {
          commissions.map((commission) => (
            <li class="overflow-hidden rounded-xl shadow-lg">
              <a class="relative" href={commission.href}>
                <>
                  <Image
                    class="-z-10 h-full object-cover"
                    src={commission.image}
                    alt={commission.name}
                    quality={30}
                    format="webp"
                  />
                  <h3 class="absolute bottom-3 left-4 text-xl font-medium text-white drop-shadow-normal">
                    {commission.name}
                  </h3>
                </>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
