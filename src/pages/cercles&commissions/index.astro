import ECOmmission from "@images/commissions/placeholder.jpg";
import FPMaths from "@images/commissions/placeholder.jpg";

const cercles = [
  {
    name: "Bar",
    href: "/cercles&commissions/bar",
    image: Bar,
    color: "",
  },
  {
    name: "CAP",
    href: "/cercles&commissions/cap",
    image: CAP,
    color: "",
  },
  {
    name: "CPV",
    href: "/cercles&commissions/cpv",
    image: CPV,
    color: "",
  },
  {
    name: "Magellan",
    href: "/cercles&commissions/magellan",
    image: Magellan,
    color: "",
  },
  {
    name: "Mons Mines",
    href: "/cercles&commissions/mons-mines",
    image: MM,
    color: "",
  },
  {
    name: "Mutu",
    href: "/cercles&commissions/mutu",
    image: Mutu,
    color: "",
  },
  {
    name: "Peyresq",
    href: "/cercles&commissions/peyresq",
    image: Peyresq,
    color: "",
  },
  {
    name: "Culturel",
    href: "/cercles&commissions/q",
    image: Q,
    color: "",
  },
  {
    name: "Radio Extra",
    href: "/cercles&commissions/radio-extra",
    image: Radio,
    color: "",
  },
  {
    name: "Scientifique",
    href: "/cercles&commissions/scientifique",
    image: Scientifique,
    color: "",
  },
  {
    name: "Sono-Danse-Musique",
    href: "/cercles&commissions/sdm",
