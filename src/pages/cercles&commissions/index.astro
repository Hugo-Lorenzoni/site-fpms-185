    color: "",
  },
  {
    name: "Les Sports",
    href: "/cercles&commissions/sports",
    image: Sports,
    color: "",
  },
];

const commissions = [
  {
    name: "Commission Web",
    href: "/cercles&commissions/web",
    image: CommissionWeb,
    color: "",
  },
  {
    name: "Commission Historique",
    href: "/cercles&commissions/comhisto",
    image: CommissionHistorique,
    color: "",
  },
  {
    name: "ÉCOmmission",
