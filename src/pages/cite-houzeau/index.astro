---
import Grid from "../../components/Grid.astro";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

import Houzeau from "@images/locaux/cite-houzeau.jpg";
import _400 from "@images/locaux/placeholder.jpg";
import _500 from "@images/locaux/placeholder.jpg";
import _600 from "@images/locaux/placeholder.jpg";
import _700 from "@images/locaux/placeholder.jpg";

const locaux = [
  {
    name: "400",
    href: "/cercles&commissions/web",
    image: _400,
  },
  {
    name: "500",
    href: "/cercles&commissions/comhisto",
    image: _500,
  },
  {
    name: "600",
    href: "/cercles&commissions/éco",
    image: _600,
  },
  {
    name: "700",
    href: "/cercles&commissions/fpmaths",
    image: _700,
  },
];
---

<Layout title="Cercles & Commissions">
  <main class="container mx-auto space-y-6 px-4 py-4">
    <h1
      class="bg-gradient-to-r from-blue-900 to-blue-600 bg-clip-text text-3xl font-bold text-transparent"
    >
      Cité Pierre Houzeau de Lehaie
    </h1>
    <section class="space-y-3">
      <h2 class="text-xl font-semibold">Présentation</h2>
      <div
        class="rounded-lg border-r-4 border-blue-900 bg-white font-medium shadow-xl sm:flex"
      >
        <div class="aspect-video flex-1 overflow-hidden">
          <Image
            class="h-full w-full rounded-lg object-cover"
            src={Houzeau}
            alt="Comité de la Fédération des étudiants de la Faculté Polytechnique de Mons (FPMs)"
            quality={100}
            format="webp"
          />
        </div>
        <div
          class="inline-flex w-full flex-col justify-center px-6 py-6 sm:w-auto"
        >
          <h3 class="mx-auto max-w-fit pb-4 text-xl">En résumé :</h3>
          <ul>
            <li>288 chambres <strong>individuelles</strong> avec sanitaires</li>
            <li>À <strong>10 minutes</strong> de la Grand-Place</li>
            <li>Boulevard Dolez, 69 à 7000 Mons</li>
          </ul>
        </div>
      </div>
    </section>
    <Grid title="Locaux de la Cité Houzeau" list={locaux} />
  </main>
</Layout>
