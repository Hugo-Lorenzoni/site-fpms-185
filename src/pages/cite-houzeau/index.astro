import _400 from "@images/locaux/placeholder.jpg";
import _500 from "@images/locaux/placeholder.jpg";
import _600 from "@images/locaux/placeholder.jpg";
import _700 from "@images/locaux/placeholder.jpg";

const locaux = [
  {
    name: "Restaurant universitaire",
    href: "/cite-houzeau/restaurant-universitaire",
    image: _400,
  },
  {
    name: "Bar",
    href: "/cite-houzeau/bar",
    image: _400,
  },
  {
    name: "Salle PP",
    href: "/cite-houzeau/salle-pp",
    image: _400,
  },
  {
    name: "400",
    href: "/cite-houzeau/400",
    image: _400,
  },
  {
    name: "500",
    href: "/cite-houzeau/500",
    image: _500,
  },
  {
    name: "600",
    href: "/cite-houzeau/600",
    image: _600,
  },
  {
    name: "700",
    href: "/cite-houzeau/700",
    image: _700,
  },
  {
    name: "800",
    href: "/cite-houzeau/800",
    image: _700,
  },
  {
    name: "9/10",
    href: "/cite-houzeau/9-10",
    image: _700,
  },
  {
    name: "1100",
    href: "/cite-houzeau/1100",
    image: _700,
  },
  {
    name: "11/12",
    href: "/cite-houzeau/11-12",
    image: _700,
  },
  {
    name: "Local de la Mutu",
    href: "/cite-houzeau/mutu",
    image: _700,
  },
];
---

<Layout title="Cité Houzeau">
  <main class="container mx-auto space-y-6 px-4 py-4">
    <h1
      class="bg-gradient-to-r from-blue-900 to-blue-600 bg-clip-text text-3xl font-bold text-transparent"
    >
      Cité Pierre Houzeau de Lehaie
    </h1>
    <section class="space-y-3">
      <h2 class="text-xl font-semibold">Présentation</h2>
      <section
        class="space-y-2 rounded-lg border-l-4 border-blue-900 bg-white px-6 py-3 font-medium shadow-xl"
      >
        <h2 class="text-xl">
          Cité des étudiants de la Faculté Polytechnique de Mons (FPMs).
        </h2>
        <p class="text-justify">
          La Cité Houzeau est le centre névralgique de la vie étudiante
          Polytech. Chaque jour, des centaines d'étudiants Polytech s'y
          rencontrent ou y participent à des activités. En plus du restaurant
          universitaire Houzeau, on y retrouve tous les locaux gérés par les
          différents Cercles dont la liste est reprise
          <a class="text-blue-900 underline" href="#Locaux de la Cité Houzeau">
            ci-dessous ↓
          </a>
        </p>
      </section>
      <div
        class="rounded-lg border-r-4 border-blue-900 bg-white font-medium shadow-xl md:flex"
      >
        <div class="aspect-video flex-1 overflow-hidden">
          <Image
            class="h-full w-full rounded-lg object-cover"
            src={Houzeau}
            alt="Comité de la Fédération des étudiants de la Faculté Polytechnique de Mons (FPMs)"
            quality={100}
            format="webp"
          />
        </div>
        <div
          class="inline-flex w-full flex-col justify-center px-6 py-6 md:w-auto"
        >
          <h3 class="mx-auto max-w-fit pb-4 text-xl">En résumé :</h3>
          <ul>
            <li>288 chambres <strong>individuelles</strong> avec sanitaires</li>
            <li>
              Centre névralgique de la vie étudiante <strong>Polytech</strong>
            </li>
            <li>À <strong>10 minutes</strong> de la Grand-Place</li>
            <li class="mt-2"><i>Boulevard Dolez, 69 à 7000 Mons</i></li>
          </ul>
        </div>
      </div>
    </section>
    <Grid title="Locaux de la Cité Houzeau" list={locaux} />
  </main>
</Layout>
