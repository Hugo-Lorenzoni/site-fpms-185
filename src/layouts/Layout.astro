---
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";

import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr-BE">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="title"
      content="Site de la Fédération des étudiants de la Faculté polytechnique de Mons (F.P.Ms)"
    />
    <meta
      name="description"
      content="La Fédération des étudiants FPMs (aussi appelée la Fédérale ou Fédé) a comme rôle de représenter les étudiants de la Polytech de Mons dans le contexte académique et folklorique"
    />
    <meta name="author" content="Commission Web FPMs 185" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href="https://fede.fpms.as.be" />
    <title>Fédé FPMs - {title}</title>
    <ViewTransitions />
  </head>
  <body class="antialiased" transition:animate="fade">
    <Nav />
    <div>
      <slot />
    </div>
    <Footer />
  </body>
</html>
